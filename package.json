{
  "private": true,
  "description": "A day without a new HOC is a day wasted",
  "workspaces": [
    "packages/*"
  ],
  "resolutions": {
    "babel-core": "^7.0.0-bridge.0"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0-beta.46",
    "@babel/plugin-syntax-dynamic-import": "^7.0.0-beta.46",
    "@babel/preset-env": "^7.0.0-beta.46",
    "@babel/preset-react": "^7.0.0-beta.46",
    "@babel/register": "^7.0.0-beta.46",
    "@start/cli": "^0.1.0-6",
    "@start/plugin-env": "^0.1.0-3",
    "@start/plugin-find": "^0.1.0-4",
    "@start/plugin-lib-babel": "^0.1.0-1",
    "@start/plugin-lib-codecov": "^0.1.0-1",
    "@start/plugin-lib-eslint": "^0.1.0-3",
    "@start/plugin-lib-jest": "^0.1.0-1",
    "@start/plugin-lib-webpack-serve": "^0.1.0-2",
    "@start/plugin-parallel": "^0.1.0-4",
    "@start/plugin-read": "^0.1.0-3",
    "@start/plugin-remove": "^0.1.0-2",
    "@start/plugin-sequence": "^0.1.0-3",
    "@start/plugin-write": "^0.1.0-4",
    "@start/reporter-verbose": "^0.1.0-3",
    "@start/task": "^0.1.0-0",
    "babel-core": "^7.0.0-0",
    "babel-eslint": "^8.2.3",
    "babel-jest": "^22.4.3",
    "babel-loader": "^7.1.4",
    "babel-preset-react-native": "^5.0.0",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "enzyme-to-json": "^3.3.3",
    "eslint-config-standard": "^11.0.0",
    "eslint-config-standard-react": "^6.0.0",
    "eslint-plugin-import": "^2.11.0",
    "eslint-plugin-node": "^6.0.1",
    "eslint-plugin-promise": "^3.7.0",
    "eslint-plugin-react": "^7.7.0",
    "eslint-plugin-standard": "^3.0.1",
    "esm": "^3.0.24",
    "html-webpack-plugin": "^3.2.0",
    "raf": "^3.3.2",
    "react": "^16.3.2",
    "react-dom": "^16.3.2",
    "react-hot-loader": "^4.1.1",
    "react-test-renderer": "^16.3.2",
    "recompose": "^0.26.0",
    "webpack": "^4.6.0"
  },
  "start": {
    "require": [
      "esm",
      "@babel/register"
    ],
    "reporter": "@start/reporter-verbose"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "current"
          },
          "modules": false
        }
      ]
    ],
    "plugins": [
      "@babel/plugin-proposal-object-rest-spread",
      "@babel/plugin-syntax-dynamic-import"
    ]
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "plugins": [
      "standard",
      "promise",
      "import",
      "react"
    ],
    "extends": [
      "standard",
      "standard-react",
      "plugin:promise/recommended",
      "plugin:import/recommended",
      "plugin:react/recommended"
    ],
    "rules": {
      "react/prop-types": "off",
      "import/unambiguous": "off"
    },
    "env": {
      "jest": true,
      "browser": true,
      "node": true
    }
  },
  "eslintIgnore": [
    "build/",
    "coverage/",
    "node_modules/"
  ]
}
